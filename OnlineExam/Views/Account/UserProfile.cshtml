@model OnlineExam.ViewModels.VMUserProfile
@using OnlineExam.Helpers
@{
    ViewBag.Title = "UserProfile";
    if (User.GETROLENAME() == "Admin")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_StudentLayout.cshtml";
    }

}

<style>
    .txtRequired {
        border-left: 2px solid #ff0000;
    }

    .spnRequired {
        color: #ff0000;
    }
</style>
<section class="content-header" style="background-color: #ecf0f5;">
    <h1>
        User Profile
        <small>Update Profile</small>
    </h1>
    <ol class="breadcrumb" style="float:left">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">User Profile</li>
    </ol>
</section>


<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header" style="border-bottom: 1px dotted #e4e0e0;">

                    @*<h1 class="box-title"><i class="fa fa-fw fa-table"></i>Add Chapter</h1>
                        <a class="btn btn-default pull-right" href="@Url.Action("Index", "Chapters")"><i class="fa fa-reply"></i> Back to list</a>*@
                </div>
                @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new { @class = "form-horizontal form-label-left", @role = "form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="box-body">


                        <div class="form-group">
                            <label class="text-right col-md-3 col-sm-3 col-xs-2">
                                User Name
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-10">
                                @Html.TextBoxFor(model => model.UserName, new { @readonly = "readonly", @required = "required", @class = "form-control txtRequired" })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="text-right col-md-3 col-sm-3 col-xs-2">
                                Full Name
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-10">
                                @Html.TextBoxFor(model => model.FullName, new { @required = "required", @class = "form-control txtRequired" })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="text-right col-md-3 col-sm-3 col-xs-2">
                                Email
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-10">
                                @Html.TextBoxFor(model => model.Email, new { @readonly = "readonly", @required = "required", @class = "form-control txtRequired" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="text-right col-md-3 col-sm-3 col-xs-2">
                                Phone
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-10">
                                @Html.TextBoxFor(model => model.PhoneNo, new { @readonly = "readonly", @required = "required", @class = "form-control txtRequired" })
                                @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                    <div class="box-footer" style="border-top: 1px dotted #e4e0e0;">
                        <div style="margin:0 auto; width:200px">
                            <button type="submit" class="btn btn-primary">SAVE</button>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

