@model PagedList.IPagedList<OnlineExam.Models.MCQQuestion>
@using PagedList.Mvc;
@{
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    ViewBag.Title = "Index";
    int size = 10;

    if (ViewBag.NoOfRows != null)
    {
        size = ViewBag.NoOfRows;
    };
    int Nopage = 1;
    if (ViewBag.page != null)
    {
        Nopage = ViewBag.page;
    };
    int row = size * Nopage;
    row = row - size;
}

<section class="content-header" style="background-color: #ecf0f5;">
    <h1>
        MCQQuestions
        <small>All MCQQuestions</small>
    </h1>
    <ol class="breadcrumb" style="float:left">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master Data</a></li>
        <li class="active">MCQQuestions</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header" style="border-bottom: 1px dotted #e4e0e0;">
                    <h1 class="box-title"> <i class="fa fa-fw fa-table"></i>List of MCQQuestions</h1>
                    <a class="btn btn-info pull-right" href="@Url.Action("Create", "MCQQuestions")"><i class="fa fa-plus-square-o"></i> Create New</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-6">
                            @using (Ajax.BeginForm("Index", "MCQQuestions", FormMethod.Get, new AjaxOptions
                            {
                                UpdateTargetId = "BodyContainer",
                                InsertionMode = InsertionMode.Replace
                            }))
                            {
                                <table class="table table-bordered table-hover">
                                    <tr>
                                        <td>
                                            <i class="fa fa-filter" style=" color: #aeaeae; font-size: 22px;"></i>
                                        </td>
                                        <td>
                                            @Html.TextBox("NoOfRows", ViewBag.NoOfRows as string, new { @type = "number", @min = "3", @max = "100", @class = "form-control " })
                                        </td>
                                        <td>
                                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control ", placeholder = "Name" })
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-light" style="background-color: #e6e6e6; "><i class="fa fa-search-plus" style="margin-right:5px; color:#808080"></i>Serach</button>
                                        </td>
                                    </tr>
                                </table>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr style="background-color: #3c8dbc; color: white; ">
                                        <th>#</th>
                                        <th>
                                            Subject
                                        </th>
                                        <th>
                                            Chapter
                                        </th>
                                        @*<th>
                                            Topic
                                        </th>*@
                                        <th>
                                            Question
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    row++;
                                    <tr>
                                        <td>@row</td>
                                        <td>@item.Subject.SubjectName</td>
                                        <td>
                                            @item.Chapter.ChapterName
                                        </td>
                                        @*<td>
                                            @item.Topic.TopicName
                                        </td>*@
                                        <td>
                                            @item.QuestionName
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                                    Action <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="@Url.Action("Details", "MCQQuestions", new { id = item.Id })">Detail</a></li>
                                                    <li><a href="@Url.Action("Edit", "MCQQuestions", new { id = item.Id })">Edit</a></li>
                                                    <li><a href="@Url.Action("Delete", "MCQQuestions", new { id = item.Id ,page=Model.PageNumber,  currentFilter = ViewBag.CurrentFilter, NoOfRows = ViewBag.NoOfRows})" onclick="return DeleteItem(this);">Delete</a></li>
                                                </ul>
                                            </div>

                                        </td>
                                    </tr>
                                }

                            </table>

                        </div>
                    </div>
                    <div class="row" style="margin:0px;">
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                                            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, NoOfRows = ViewBag.NoOfRows }),
                                                             PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "BodyContainer" }))



                    </div>
                </div>
                <!-- /.box-body -->
            </div>

        </div>
    </div>
</section>

