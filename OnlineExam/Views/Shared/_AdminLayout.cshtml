        $(document).ready(function () {
            $(".ajax-loading").hide();
        })

        $(document).ajaxStart(function () {
            $(".ajax-loading").show();
        });

        $(document).ajaxStop(function () {
            $(".ajax-loading").hide();
            //setTimeout(function () {
            //    $(".ajax-loading").hide();
            //}, 1000)
        });
        $(function () {

            //Initialize Select2 Elements
            $('.select2').select2({
                allowClear: true,
                placeholder: "--Select--"
            })

            var urlString = window.location.toString();

            var hasValue = urlString.substr(0, urlString.indexOf("/Create"));
    if (hasValue.length < 1) {
    hasValue = urlString.substr(0, urlString.indexOf("/Edit"));
    }
    if (hasValue.length < 1) {
    hasValue = urlString.substr(0, urlString.indexOf("/View"));
    }
    if (hasValue.length < 1) {
    hasValue = urlString.substr(0, urlString.indexOf("?"));
    }
    if (hasValue.length > 0) {
    urlString = hasValue;
    }
    var menuItem = $('.sidebar-menu li a').filter(function () {
    return this.href == urlString;
    })
    menuItem.parent('li').addClass('treeview active menu-open').parent('ul').slideDown().parent().addClass('treeview active menu-open');

    })
