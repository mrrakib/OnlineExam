    useBootstrap: false,
    buttons: {
    No: {
    text: 'No',
    btnClass: 'btn-green',
    action: function () {

    }
    },
    Yes: {
    text: 'Yes',
    btnClass: 'btn-danger',
    action: function () {
    document.location = obj;
    }
    }
    }
    });
